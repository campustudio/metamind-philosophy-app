{
  "name": "yuansixiang",
  "version": "1.0.0",
  "private": true,
  "description": "元思想 - 教育陪伴平台",
  "scripts": {
    "dev:app": "pnpm --filter @yuansixiang/app dev:weapp",
    "dev:h5": "pnpm --filter @yuansixiang/app dev:h5",
    "dev:server": "pnpm --filter @yuansixiang/server start:dev",
